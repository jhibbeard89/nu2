<div class="grid-body">

  <div class="container column-left">
      <h1 class="registration-office-header">Please book your appointment with:</h1>
      <div class="registration-office-details">
        <div>
          <h1><%= @registration_office.office_name %></h1>
          <p><%= @registration_office.address %></p>

          <h3>Opening Hours:</h3>
          <p>Mondays to Fridays from <%= @registration_office.opening_hours %> to <%= @registration_office.closing_hours %> o'clock</p>
      </div>
    </div>
  </div>

  <div class="container column-right">
    <% @appointments.each do |appointment| %>
      <% if appointment.not_booked? %>
        <%= simple_form_for appointment, data: {confirm: 'Are you sure you want to book this appointment?'} do |f| %>
          <%= f.button :submit, value: appointment.date.strftime('%A, %d %b, %l:%M %p'), class: 'btn btn-primary' %>
        <% end %>
      <% end %>
    <% end %>
  </div>

</div>
