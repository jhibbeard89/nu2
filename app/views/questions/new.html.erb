<div class="profile_question">
  <div class="container">
    <h3>To allow us to understand your needs, please answer a few questions.</h3>
    <%= simple_form_for :questions, url: set_session_questions_path do |f|  %>
      <%= f.input :employment_status,
        input_html: {
          placeholder: "Employed",
          class: "input-field"
          }%>
      <%= f.input :annual_gross_income_range,
        input_html: {
          placeholder: "€45 000",
          class: "input-field"
          }%>
      <%= f.input :net_month_income_range,
        input_html:{
          placeholder: "€3 500",
          class: "input-field"
          }%>
      <%= f.input :german_level,
        input_html: {
          placeholder: "Beginner",
          class: "input-field"
          }%>
      <%= f.input :email,
        input_html: {
          placeholder: "s.mayer@example.de",
          class: "input-field" }
          %>
      <%= f.input :address,
        input_html: {
          autocomplete: "address",
          id: "user_address",
          placeholder: "Herbertstraße 13, Berlin, 10123",
          class: "input-field" }
          %>
      <%= f.input :phone_number,
        input_html:{
          placeholder: "+49 123 45678912",
          class: "input-field"
        } %>
      <%= f.input :arrival_date,
        input_html: {
          type: 'date',
          class: 'input-field' } %>
      <%= f.input :duration,
        input_html: {
          placeholder: "3 weeks",
          class: "input-field"
        } %>
      <%= f.input :date_of_birth,
        input_html: {
          type: 'date',
          class: 'input-field' } %>
      <%= f.submit class: "btn btn-flat", value: "Submit my questions" %>
    <% end %>
  </div>
</div>
