<div class="message-container <%= message.user == user ? "my-message" : "your-message" %>" id="message-<%= message.id %>" data-user="<%= message.user.first_name %> ">
  <i class="author">
    <span><%= message.user.first_name %></span>
    <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
  </i>
  <p><%= message.content %> <%= message.user.first_name %> <%= user.first_name %></p>
</div>