<% gross_annual_income_range = 88000 %>
<% employment_status = "employed" %>
<% age = 30 %>


<% if annual_gross_income_range < 62550 || (employment_status == "student" && age < 30)  %>
    <h2>Based on your WAY answers you should have public health care.</h2>
    <p>Please select from the following public health care options below:</p>


        
            <% @public_insurances.each do |insurance| %>
                <div class="card-product-2">
                    <%=insurance.name %>
                    <p><%= insurance.summary %></p>
                    <%= image_tag(insurance.image) %>
                    <button type="button" class="btn-gradient-yellow">Choose this insurance</button>
                </div>
            <% end %>
        
    <% elsif age <= 35 && annual_gross_income_range > 62550 %>

    <h2>Based on your WAY answers you should have private health care as it is cheaper in the long term.</h2>
    <p>Please select from the following private health care options below:</p>
    <div class="card-container">
        
            <% @private_insurances.each do |insurance| %>
                <div class="card-product-2">
                    <%=insurance.name%>
                    <p><%= insurance.summary %></p>
                    <%= image_tag(insurance.image) %>
                    <button type="button" class="btn-gradient-yellow">Choose this insurance</button>
                </div>
            <% end %>
    

    </div>
